pipeline {
	agent any
	dir('packages/augur-core')
	{

	}
	stages {
		stage('Dependency Installation') {
			steps {
				sh 'python3 -m venv .augur-env'
				sh 'source .augur-env/bin/activate'
				dir('packages/augur-core') {
					sh 'yarn'
					sh 'pip install -r requirements.txt'
				}
			}
		}
		stage('Build') {
			steps {
				echo 'Building ..'
			}
		}
		stage('Test') {
			steps {
				echo 'Testing ..'
			}
		}
		stage('Deploy') {
			steps {
				echo 'Deploying ..'
			}
		}
	}
}
